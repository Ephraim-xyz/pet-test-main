.results-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  flex-direction: column;
}

/* 顶部导航 */
.nav-header {
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20px);
  box-shadow: 0 2rpx 16rpx rgba(0,0,0,0.1);
  padding: 24rpx 32rpx;
}

.nav-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.back-button, .share-button {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 16rpx;
  background: #f3f4f6;
  font-size: 32rpx;
  color: #6b7280;
}

.nav-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1f2937;
}

.share-icon {
  font-size: 28rpx;
}

/* 内容区域 */
.content-scroll {
  flex: 1;
  padding: 32rpx;
  padding-bottom: 160rpx;
}

.result-card {
  margin-bottom: 48rpx;
  border-radius: 48rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  box-shadow: 0 16rpx 64rpx rgba(0,0,0,0.15);
  animation: slideIn 0.6s ease-out;
  overflow: hidden;
}

@keyframes slideIn {
  from { 
    transform: translateY(40rpx); 
    opacity: 0; 
  }
  to { 
    transform: translateY(0); 
    opacity: 1; 
  }
}

/* 性格类型卡片 */
.personality-card {
  background: linear-gradient(135deg, rgba(255,255,255,0.95) 0%, rgba(248,250,252,0.95) 100%);
}

.personality-content {
  text-align: center;
  padding: 64rpx 48rpx;
}

.dog-avatar {
  font-size: 160rpx;
  margin-bottom: 32rpx;
  filter: drop-shadow(0 8rpx 32rpx rgba(0,0,0,0.1));
}

.personality-title {
  font-size: 60rpx;
  font-weight: bold;
  color: #1f2937;
  margin-bottom: 16rpx;
}

.personality-subtitle {
  font-size: 36rpx;
  color: #6b7280;
  margin-bottom: 32rpx;
}

.personality-tag {
  font-size: 28rpx;
  padding: 16rpx 32rpx;
  border-radius: 32rpx;
}

/* 卡片标题 */
.card-header {
  padding: 48rpx 48rpx 24rpx;
}

.card-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #1f2937;
  text-align: center;
}

/* 维度分析 */
.dimensions-content {
  padding: 0 48rpx 48rpx;
}

.dimension-item {
  margin-bottom: 48rpx;
}

.dimension-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.dimension-left {
  color: #3b82f6;
}

.dimension-right {
  color: #6b7280;
}

.dimension-bar-container {
  position: relative;
}

.dimension-bar {
  height: 32rpx;
  background: #e5e7eb;
  border-radius: 16rpx;
  overflow: hidden;
  position: relative;
}

.dimension-fill {
  height: 100%;
  border-radius: 16rpx;
  transition: width 1s ease-in-out;
  background: linear-gradient(90deg, #3b82f6 0%, #1d4ed8 100%);
}

.dimension-percentage {
  position: absolute;
  right: 16rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 24rpx;
  color: #fff;
  font-weight: bold;
  text-shadow: 0 1rpx 2rpx rgba(0,0,0,0.3);
}

/* 性格特征 */
.traits-content {
  padding: 0 48rpx 48rpx;
}

.trait-description {
  font-size: 32rpx;
  line-height: 1.6;
  color: #374151;
  margin-bottom: 32rpx;
}

.trait-highlight {
  background: #dbeafe;
  border-left: 8rpx solid #3b82f6;
  padding: 32rpx;
  border-radius: 16rpx;
}

.highlight-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1e40af;
  margin-bottom: 16rpx;
}

.trait-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.trait-tag {
  background: #f0f9ff;
  color: #1e40af;
  border: 1rpx solid #93c5fd;
}

/* 互动建议 */
.suggestions-content {
  padding: 0 48rpx 48rpx;
}

.suggestion-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 32rpx;
  padding: 32rpx;
  background: #f8fafc;
  border-radius: 24rpx;
}

.suggestion-icon {
  font-size: 48rpx;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.suggestion-content {
  flex: 1;
}

.suggestion-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 8rpx;
}

.suggestion-desc {
  font-size: 28rpx;
  color: #6b7280;
  line-height: 1.5;
}

/* 品种匹配 */
.breed-content {
  padding: 0 48rpx 48rpx;
}

.breed-match {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  padding: 32rpx;
  background: #f3f4f6;
  border-radius: 24rpx;
}

.breed-emoji {
  font-size: 64rpx;
  margin-right: 24rpx;
}

.breed-info {
  flex: 1;
}

.breed-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 8rpx;
}

.match-tag {
  font-size: 24rpx;
}

.breed-description {
  font-size: 28rpx;
  color: #6b7280;
  line-height: 1.5;
  padding: 0 32rpx;
}

/* 底部间距 */
.bottom-spacing {
  height: 120rpx;
}

/* 底部操作按钮 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  border-top: 1px solid #e5e7eb;
  padding: 32rpx;
  display: flex;
  gap: 24rpx;
}

.share-card-button {
  flex: 1;
  height: 96rpx;
  border-radius: 48rpx;
  background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%);
  font-size: 32rpx;
  font-weight: 600;
}

.restart-button {
  flex: 1;
  height: 96rpx;
  border-radius: 48rpx;
  font-size: 32rpx;
  color: #6b7280;
} 