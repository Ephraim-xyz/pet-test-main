/**index.wxss**/
.index-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 0 48rpx;
}

.content {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
}

.logo-section {
  margin-bottom: 120rpx;
}

.app-logo {
  font-size: 200rpx;
  margin-bottom: 48rpx;
  filter: drop-shadow(0 16rpx 32rpx rgba(0,0,0,0.2));
}

.app-name {
  font-size: 72rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 24rpx;
  text-shadow: 0 4rpx 8rpx rgba(0,0,0,0.3);
}

.app-tagline {
  font-size: 36rpx;
  color: rgba(255,255,255,0.9);
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.3);
}

.features {
  display: flex;
  justify-content: space-around;
  width: 100%;
  max-width: 600rpx;
}

.feature-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.feature-icon {
  font-size: 64rpx;
  margin-bottom: 16rpx;
  filter: drop-shadow(0 4rpx 8rpx rgba(0,0,0,0.2));
}

.feature-text {
  font-size: 28rpx;
  color: rgba(255,255,255,0.9);
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.3);
}

.bottom-section {
  width: 100%;
  padding-bottom: 80rpx;
}

.start-button {
  width: 100%;
  height: 96rpx;
  border-radius: 48rpx;
  background: rgba(255,255,255,0.2);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255,255,255,0.3);
  color: white;
  font-size: 36rpx;
  font-weight: 600;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.3);
}
