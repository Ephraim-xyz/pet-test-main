.welcome-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
  display: flex;
  flex-direction: column;
  padding: 0 32rpx;
}

.content-area {
  flex: 1;
  padding-top: 80rpx;
}

.title-section {
  text-align: center;
  margin-bottom: 80rpx;
}

.emoji-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  filter: drop-shadow(0 8rpx 16rpx rgba(0,0,0,0.1));
}

.main-title {
  font-size: 56rpx;
  font-weight: bold;
  color: #1f2937;
  margin-bottom: 16rpx;
}

.sub-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #374151;
  margin-bottom: 32rpx;
}

.description {
  font-size: 32rpx;
  color: #6b7280;
  line-height: 1.6;
}

.description-sub {
  display: block;
  font-size: 28rpx;
  color: #9ca3af;
  margin-top: 16rpx;
}

.features-section {
  margin-bottom: 60rpx;
}

.feature-card {
  margin-bottom: 24rpx;
  border-radius: 24rpx;
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.3);
}

.feature-item {
  display: flex;
  align-items: center;
  padding: 32rpx;
}

.feature-icon {
  font-size: 48rpx;
  margin-right: 24rpx;
}

.feature-text {
  flex: 1;
}

.feature-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 8rpx;
}

.feature-desc {
  font-size: 28rpx;
  color: #6b7280;
}

.notice-section {
  text-align: center;
  margin-bottom: 40rpx;
}

.notice-text {
  font-size: 28rpx;
  color: #374151;
  margin-bottom: 16rpx;
}

.bottom-section {
  padding-bottom: 80rpx;
}

.start-button {
  width: 100%;
  height: 96rpx;
  font-size: 36rpx;
  font-weight: 600;
  border-radius: 48rpx;
  background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%);
  margin-bottom: 32rpx;
}

.disclaimer {
  font-size: 24rpx;
  color: #9ca3af;
  text-align: center;
  line-height: 1.5;
} 