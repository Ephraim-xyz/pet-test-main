.questionnaire-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
  display: flex;
  flex-direction: column;
}

/* 顶部导航 */
.nav-header {
  background: #fff;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
  padding: 24rpx 32rpx;
}

.nav-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.back-button {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 16rpx;
  background: #f3f4f6;
  font-size: 32rpx;
  color: #6b7280;
}

.nav-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1f2937;
}

.nav-right {
  width: 60rpx;
}

.progress-section {
  margin-top: 24rpx;
}

.progress-info {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #6b7280;
  margin-bottom: 16rpx;
}

/* 问题区域 */
.question-area {
  flex: 1;
  padding: 48rpx 32rpx;
}

.question-card {
  margin-bottom: 48rpx;
  border-radius: 32rpx;
  background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
  border: 1px solid #e2e8f0;
}

.question-content {
  text-align: center;
  padding: 48rpx 32rpx;
}

.question-emoji {
  font-size: 80rpx;
  margin-bottom: 32rpx;
}

.question-text {
  font-size: 36rpx;
  font-weight: 600;
  color: #1f2937;
  line-height: 1.5;
  margin-bottom: 24rpx;
}

.question-subtitle {
  font-size: 28rpx;
  color: #6b7280;
}

/* 评分卡片 */
.rating-card {
  border-radius: 32rpx;
  background: #fff;
  margin-bottom: 48rpx;
}

.rating-section {
  padding: 48rpx 32rpx;
}

.rating-labels {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #6b7280;
  margin-bottom: 32rpx;
}

.label-center {
  text-align: center;
}

.label-right {
  text-align: right;
}

/* Likert 评分组件 */
.likert-scale {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 40rpx 0;
  padding: 0 16rpx;
}

.likert-point {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 6rpx solid #e5e7eb;
  transition: all 0.3s ease;
  cursor: pointer;
  position: relative;
}

.likert-point.active {
  border-color: currentColor;
  transform: scale(1.2);
}

.point-1 { 
  background: #3b82f6; 
  color: #3b82f6;
}
.point-2 { 
  background: #60a5fa; 
  color: #60a5fa;
}
.point-3 { 
  background: #9ca3af; 
  color: #9ca3af;
}
.point-4 { 
  background: #6ee7b7; 
  color: #10b981;
}
.point-5 { 
  background: #10b981; 
  color: #10b981;
}

.rating-en-labels {
  display: flex;
  justify-content: space-between;
  font-size: 20rpx;
  color: #9ca3af;
  margin-top: 16rpx;
}

/* 维度提示 */
.dimension-hint {
  background: #dbeafe;
  border: 1px solid #93c5fd;
  border-radius: 24rpx;
  padding: 32rpx;
  display: flex;
  align-items: flex-start;
}

.hint-dot {
  width: 12rpx;
  height: 12rpx;
  background: #3b82f6;
  border-radius: 50%;
  margin-right: 16rpx;
  margin-top: 8rpx;
}

.hint-content {
  flex: 1;
}

.hint-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1e40af;
  margin-bottom: 8rpx;
}

.hint-desc {
  font-size: 24rpx;
  color: #3730a3;
  line-height: 1.4;
}

/* 底部按钮 */
.bottom-actions {
  background: #fff;
  border-top: 1px solid #e5e7eb;
  padding: 32rpx;
  display: flex;
  gap: 24rpx;
}

.prev-button {
  flex: 1;
  height: 96rpx;
  border-radius: 24rpx;
}

.next-button {
  flex: 2;
  height: 96rpx;
  border-radius: 24rpx;
  background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%);
} 