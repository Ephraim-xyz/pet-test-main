.breed-input-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
  display: flex;
  flex-direction: column;
}

/* 顶部导航 */
.nav-header {
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20px);
  box-shadow: 0 2rpx 16rpx rgba(0,0,0,0.1);
  padding: 24rpx 32rpx;
}

.nav-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.back-button {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 16rpx;
  background: #f3f4f6;
  font-size: 32rpx;
  color: #6b7280;
}

.nav-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1f2937;
}

.skip-btn {
  color: #3b82f6;
  font-size: 32rpx;
  font-weight: 500;
}

/* 主内容区 */
.content-area {
  flex: 1;
  padding: 48rpx 32rpx 180rpx;
}

.title-section {
  text-align: center;
  margin-bottom: 48rpx;
}

.emoji-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  filter: drop-shadow(0 8rpx 16rpx rgba(0,0,0,0.1));
}

.main-title {
  font-size: 44rpx;
  font-weight: bold;
  color: #1f2937;
  margin-bottom: 24rpx;
  line-height: 1.3;
}

.description {
  font-size: 32rpx;
  color: #6b7280;
  line-height: 1.6;
}

.description-sub {
  display: block;
  font-size: 32rpx;
  color: #6b7280;
}

/* 输入卡片 */
.input-card {
  margin-bottom: 48rpx;
  border-radius: 32rpx;
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.1);
}

.input-section {
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.input-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #374151;
  margin-bottom: 16rpx;
}

.optional-text {
  color: #9ca3af;
  font-weight: normal;
}

.input-wrapper {
  position: relative;
}

.breed-input {
  font-size: 32rpx;
  border-radius: 24rpx;
}

.search-icon {
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 32rpx;
  color: #9ca3af;
}

.input-tip {
  font-size: 24rpx;
  color: #6b7280;
  padding: 0 32rpx 32rpx;
  line-height: 1.5;
}

/* 品种推荐 */
.breeds-section {
  margin-bottom: 48rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 32rpx;
}

.breeds-grid {
  gap: 24rpx;
}

.breed-item {
  padding: 12rpx;
}

.breed-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx 24rpx;
  text-align: center;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.1);
  transition: all 0.3s ease;
  border: 2rpx solid transparent;
}

.breed-card.selected {
  background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
  color: white;
  transform: translateY(-4rpx);
  border-color: #3b82f6;
}

.breed-emoji {
  font-size: 48rpx;
  margin-bottom: 16rpx;
}

.breed-name {
  font-size: 28rpx;
  font-weight: 500;
}

/* 选中品种显示 */
.selected-section {
  background: #dbeafe;
  border: 1px solid #93c5fd;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
}

.selected-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.selected-dot {
  width: 12rpx;
  height: 12rpx;
  background: #3b82f6;
  border-radius: 50%;
  margin-right: 16rpx;
}

.selected-text {
  flex: 1;
  color: #1e40af;
  font-weight: 500;
  font-size: 32rpx;
}

.clear-btn {
  color: #3b82f6;
  font-size: 40rpx;
  padding: 8rpx;
}

/* 底部按钮 */
.bottom-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  border-top: 1px solid #e5e7eb;
  padding: 48rpx 32rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.continue-button {
  height: 96rpx;
  border-radius: 48rpx;
  background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%);
  font-size: 36rpx;
  font-weight: 600;
}

.skip-button {
  height: 72rpx;
  border-radius: 36rpx;
  font-size: 32rpx;
  color: #6b7280;
} 